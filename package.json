{
  "name": "my-python-extension",
  "displayName": "My Python Extension",
  "description": "A simple extension with a Python backend.",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/my-python-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/my-python-extension/issues"
  },
  "homepage": "https://github.com/yourusername/my-python-extension#readme",
  "keywords": [
    "python",
    "json-rpc",
    "backend",
    "interface",
    "automation"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:pythonExtension.sidebarView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pythonExtension",
          "title": "Python Extension",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "pythonExtension": [
        {
          "type": "webview",
          "id": "pythonExtension.sidebarView",
          "name": "Python Interface",
          "initialSize": 400
        }
      ]
    },
    "commands": [
      {
        "command": "my-python-extension.helloPython",
        "title": "Hello Python"
      },
      {
        "command": "pythonExtension.openSidebar",
        "title": "Open Python Sidebar"
      },
      {
        "command": "pythonExtension.openRight",
        "title": "Open Python Extension (Right Side)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "my-python-extension.helloPython",
          "group": "navigation",
          "icon": "$(play)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0"
  }
}
